  <% content_for :title, "Top Contributors" %>

<div><h1 class="fs-1 fw-lighter text-center"><b><i>Top</i></b> Contributors</h1></div>
<hr class="hr">
<div class="row">
<div class="col">
<ol>
<h2 class="fs-1 fw-lighter">Top Total Karma</h2>

<% @top_karma_users.each do |user| %>
 <li class="fs-1"><%= link_to user.username, "/users/#{user.username}"  %> | <%= user.karma %></li>
<% end %>
</ol>
</div>
<div class="col">
<ol>
<h2 class="fs-1 fw-lighter">Most submissions</h2>
<% @top_contributions_users.each do |user| %>
 <li class="fs-1"><%= link_to user.username, "/users/#{user.username}"  %> | <%= user.comparisons.count %></li>
<% end %>
</ol>
</div>
</div>
