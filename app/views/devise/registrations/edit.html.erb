<h2>Edit <%= resource_name.to_s.humanize %>: <%= current_user.username %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <div class="ms-5 mt-4">New <%= f.label :password, class: "form-label w-50" %></div>
    <i class="w-50 ms-5">(leave blank if you don't want to change it)</i>
    <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-50 ms-5" %>
    <% if @minimum_password_length %>
      <br />
      <em class="w-50 ms-5"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-label w-50 ms-5" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-50 ms-5" %>
  </div>
<br>
  <div class="field">
    <%= f.label :current_password, class: "form-label w-50" %><br> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-50" %>
  </div>

      <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area(:bio, size: '50x10', class: "form-control w-50") %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-outline-primary mt-5 mb-5 w-25" %>
  </div>
<% end %>
<hr>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger mx-5" %></p>

<%= link_to "Back", :back %>
