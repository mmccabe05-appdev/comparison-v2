      <li class="list-group-item">

        <div class="media">
          <div class="media-body">
            <h5 class="mt-0 fs-4">
              <a id="comment-<%= comment.id %>">
              <%= link_to comment.commenter.username, "/users/#{comment.commenter.username}"  %> <span class="fw-lighter fs-5">(Posted <%= time_ago_in_words(comment.created_at) %> ago)</span></a>
              <!-- still need to make the link to profile pages work -->
            </h5>
            <p class="fw-light"><%= comment.body %></p>
            <% if comment.commenter == current_user %>
            <%= link_to edit_comment_path(comment) do %>
              <i class="fas fa-edit"></i><% end %>
            <%= link_to comment_path(comment), method: :delete do %>
              <i class="fas fa-trash fa-fw"></i><% end %>
            <% else %>
            <% end %>

          </div>
        </div>

      </li>
 