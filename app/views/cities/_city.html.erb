
<div class="row">
    <div class="mb-5 mt-5">
      <div class="card">
        <div class="card-header fs-1">
          
          <i class="fa-solid fa-city"></i> <%= @city.name %> 
        </div>
        <div class="card-body">

        <div class="hstack gap-3">
        <div class="bg-ligt w-50">
          <h5 class="card-title"></h5>
          <p class="card-text fs-3">
          <p><%= @city.description %></p>
          <p><%= link_to "Read more on wikipedia", city.wiki_url  %></p>
          <p>
            <strong>Lat:</strong>
            <%= @city.lat %>
          | <strong>Lng:</strong>
            <%= @city.lng %>
          </p>
          <%= @city.neighborhoods_count%> neighborhoods in <%= @city.name %>
          <ul>
          <% @city.neighborhoods.each do |neighborhood| %>
            <li><%= link_to neighborhood.name, neighborhood %></li>
          <% end %>
          </ul>
        </div>
        <div class="vr"></div>
          <div id="map" style='width: 800px; height: 400px;'></div>

          <div>
                   <%= render 'shared/map', lat: @city.lat, lng: @city.lng, place: @city  %>

          </div>
        </div>
  
      </div>
      <div class="card-footer text-muted">
        
        </div>
        </div>
      </div>
    </div>
